{
  "name": "@paderbornjs/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 lerna run build",
    "generate": "plop",
    "test": "is-ci \"test:ci\" \"test:watch\"",
    "test:ci": "lerna run test:ci",
    "test:watch": "jest --watch",
    "release": "standard-version",
    "start": "lerna run start --parallel",
    "storybook": "yarn workspace @paderbornjs/client storybook"
  },
  "husky": {
    "hooks": {
      "commit-msg": "cross-env FORCE_COLOR=1 commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "cross-env FORCE_COLOR=1 lerna run --concurrency 1 --stream precommit"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^1.3.0",
    "@typescript-eslint/parser": "^1.3.0",
    "cross-env": "^5.2.0",
    "graphql-tag": "^2.10.1",
    "husky": "^1.3.1",
    "is-ci-cli": "^1.1.1",
    "kill-port": "^1.3.2",
    "lerna": "^3.13.0",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "plop": "^2.3.0",
    "prettier": "^1.16.4",
    "shx": "^0.3.2",
    "standard-version": "^8.0.1",
    "typescript": "^3.3.3"
  }
}
